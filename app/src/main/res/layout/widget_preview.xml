<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_gravity="center"
    android:showDividers="middle"
    android:divider="@drawable/widget_divider"
    android:background="@drawable/rounded_corner_background">
        <LinearLayout
            android:id="@+id/widget_front"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                        <TextView
                            android:id="@+id/widget_front_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/loading_info"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/widget_front_pressure_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pressure_unit"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:paddingLeft="5sp"
                            android:visibility="visible"/>
                </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center">
                <ImageView
                    android:id="@+id/widget_front_image"
                    android:layout_width="190sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rear_no_data_front_no_data"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                        <TextView
                            android:id="@+id/widget_rear_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/loading_info"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/widget_rear_pressure_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pressure_unit"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:paddingLeft="5sp"
                            android:visibility="visible"/>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>